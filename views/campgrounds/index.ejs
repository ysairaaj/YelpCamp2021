<% layout('layouts/boilerplate') %>
    <div id="cluster-map" ></div>
    <h1>The most sought Camping Destinations in the US...</h1>
    <div><a href="/campgrounds/new">Add a Campground</a></div>

    <% for(let camp of camps) {%>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.image.length){ %>
                        <img src="<%=camp.image[0].url%>" alt="" class="img-fluid">
                        <%}else{%>
                            <img src="https://eagle-sensors.com/wp-content/uploads/unavailable-image.jpg" alt=""
                                class="img-fluid">
                            <%} %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.title%>
                        </h5>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text"><small class="text-muted">
                                <%=camp.location%>
                            </small></p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%> </a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
            const camps={"features":<%-JSON.stringify(camps)%>};
        </script>
        <script src="/javascripts/clusterMap.js"></script>
          